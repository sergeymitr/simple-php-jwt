{
    "name": "sergeymitr/simple-php-jwt",
    "description": "Simple JWT Authentication using PHP",
    "version": "1.0.0-dev",
    "type": "library",
    "license": "GNU GPLv3",
    "authors": [
        {
            "name": "Sergey Mitroshin",
            "email": "sergeymitr@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "squizlabs/php_codesniffer": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs ./src --standard=PSR12",
        "phpunit": "./vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {"Sergeymitr\\SimpleJWT\\": "src/"}
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    }
}
